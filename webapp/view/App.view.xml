<mvc:View
	controllerName="com.chlv.samples.controller.App"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						
						<!-- Counter Panel -->
						<Panel
							id="counterPanel"
							headerText="{i18n>textCounterPanel}"
							width="100%"
							height="auto"
							expandable="true"
							expanded="false">
							<l:VerticalLayout width="100%">
								<Button id="pressMeButton" text="{i18n>textPressMeButton}" press=".onPress"/>
								<Button id="clickMeButton" text="{i18n>textClickMeButton}" press=".onPress"/>
								<Label text="{i18n>textPressMeLabel}" labelFor="pressMeCounter"/>
								<Input id="pressMeCounter" value="0" enabled="false" width="50%"/>
								<Label text="{i18n>textClickMeLabel}" labelFor="clickMeCounter"/>
								<Input id="clickMeCounter" value="0" enabled="false" width="50%"/>
							</l:VerticalLayout>
						</Panel>
						
						<!-- Default JSON Model Panel -->
						<Panel
							id="defaultJSONModelPanel"
							headerText="{i18n>textDefaultJSONModelPanel}"
							width="100%"
							height="auto"
							expandable="true"
							expanded="false">
							<l:VerticalLayout width="100%">
								<!-- Enabled -->
								<CheckBox text="{i18n>textEnabledCheckBox}" selected="{/enabled}"/>
								<!-- Toogle controls -->
								<Button id="toogleControlsButton" press=".onToogleEnabledControls"/>
								<!-- First Name -->
								<Label text="{i18n>textFirstNameLabel}" labelFor="firstName"/>
								<Input id="firstName" value="{/firstName}" enabled="{/enabled}"/>
								<!-- Last Name -->
								<Label text="{i18n>textLastNameLabel}" labelFor="lastName"/>
								<Input id="lastName" value="{/lastName}" enabled="{/enabled}"/>
								<!-- Gender -->
								<Label text="{i18n>textGenderLabel}" labelFor="gender"/>
								<Input id="gender" value="{/gender}" enabled="{/enabled}"/>
								<!-- Birthday -->
								<Label text="{i18n>textBirthdayLabel}" labelFor="birthday"/>
								<Input id="birthday" value="{/birthday}" enabled="{/enabled}"/>
								<!-- Address -->
								<l:Grid>
									<!-- Absolute Address -->
									<VBox id="absoluteAddressContainer">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
										<Title level="H2" text="{i18n>textAbsoluteAddressTitle}" class="sapUiSmallMarginTopBottom"/>
										<!-- Absolute Street -->
										<Label text="{i18n>textStreeLabel}" labelFor="absoluteStreet"/>
										<Input id="absoluteStreet" value="{/address/street}" enabled="{/enabled}"/>
										<!-- Absolute City -->
										<Label text="{i18n>textCityLabel}" labelFor="absoluteCity"/>
										<Input id="absoluteCity" value="{/address/city}" enabled="{/enabled}"/>
										<!-- Absolute ZIP -->
										<Label text="{i18n>textZipLabel}" labelFor="absoluteZip"/>
										<Input id="absoluteZip" value="{/address/zip}" enabled="{/enabled}"/>
										<!-- Absolute Country -->
										<Label text="{i18n>textCountryLabel}" labelFor="absoluteCountry"/>
										<Input id="absoluteCountry" value="{/address/country}" enabled="{/enabled}"/>
										<!-- Absolute Number -->
										<Label text="{i18n>textNumberLabel}" labelFor="absoluteNumber"/>
										<Input id="absoluteNumber" value="{/address/number}" enabled="{/enabled}"/>
									</VBox>
									<!-- Relative Address -->
									<VBox id="relativeAddressContainer">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S12"/>
										</layoutData>
										<Title level="H2" text="{i18n>textRelativeAddressTitle}" class="sapUiSmallMarginTopBottom"/>
										<!-- Relative Street -->
										<Label text="{i18n>textStreeLabel}" labelFor="relativeStreet"/>
										<Input id="relativeStreet" value="{street}" enabled="{/enabled}"/>
										<!-- Relative City -->
										<Label text="{i18n>textCityLabel}" labelFor="relativeCity"/>
										<Input id="relativeCity" value="{city}" enabled="{/enabled}"/>
										<!-- Relative ZIP -->
										<Label text="{i18n>textZipLabel}" labelFor="relativeZip"/>
										<Input id="relativeZip" value="{zip}" enabled="{/enabled}"/>
										<!-- Relative Country -->
										<Label text="{i18n>textCountryLabel}" labelFor="relativeCountry"/>
										<Input id="relativeCountry" value="{country}" enabled="{/enabled}"/>
										<!-- Relative Number -->
										<Label text="{i18n>textNumberLabel}" labelFor="relativeNumber"/>
										<Input id="relativeNumber" value="{number}" enabled="{/enabled}"/>
									</VBox>
								</l:Grid>
							</l:VerticalLayout>
						</Panel>
						
						<!-- Product Index Panel -->
						<Panel
							id="productsPanel"
							headerText="{i18n>textProductIndexPanel}"
							width="100%"
							expandable="true"
							expanded="false">
							<l:Grid>
								<!-- Product Index -->
								<VBox>
									<layoutData>
										<l:GridData span="XL2 L2 M2 S12"/>
									</layoutData>
									<Label text="{i18n>textProductIndexLabel}" labelFor="productIndex"/>
									<Input
										id="productIndex"
										value="0"
										type="Number"
										placeholder="{i18n>placeholderProductIndexInput}"
										submit=".onChangeProductIndex"/>
								</VBox>
								<VBox>
									<layoutData>
										<l:GridData span="XL6 L6 M6 S12"/>
									</layoutData>
									<Label text="{i18n>textProductObjectLabel}" labelFor="productObject"/>
									<TextArea id="productObject" enabled="false" rows="10" cols="70" width="100%"/>
								</VBox>
								<!-- Product Details -->
								<VBox id="productDetailsContainer">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S12"/>
									</layoutData>
									<!-- Product ID -->
									<Label text="{i18n>textProductIdLabel}" labelFor="productId"/>
									<Input id="productId" value="{products>ProductId}" enabled="false"/>
									<!-- Product Name -->
									<Label text="{i18n>textProductNameLabel}" labelFor="productName"/>
									<Input id="productName" value="{products>Name}" enabled="false"/>
									<!-- Product Price -->
									<Label text="{i18n>textProductPriceLabel}" labelFor="productPrice"/>
									<Input id="productPrice" value="{products>Price}" enabled="false"/>
								</VBox>
							</l:Grid>
						</Panel>
						
						<!-- Product Selection Panel -->
						<Panel
							id="productSelectionPanel"
							headerText="{i18n>textSelectProductPanel}"
							width="100%"
							height="auto"
							expandable="true"
							expanded="false">
							<l:Grid>
								<!-- Product Selection -->
								<VBox>
									<layoutData>
										<l:GridData span="XL3 L3 M3 S12"/>
									</layoutData>
									<!-- Select -->
									<Label text="{i18n>textSelectProductLabel}" labelFor="productsSelection"/>
									<Select
										id="productsSelection"
										width="100%"
										forceSelection="false"
										items="{products>/}"
										change=".onProductSelectionChange">
										<items>
											<core:Item key="{products>ProductId}" text="{products>ProductId} - {products>Name}"/>
										</items>
									</Select>
								</VBox>
								<!-- Product Selected -->
								<VBox>
									<layoutData>
										<l:GridData span="XL5 L5 M5 S12"/>
									</layoutData>
									<Label text="{i18n>textProductObjectLabel}" labelFor="productSelected"/>
									<TextArea id="productSelected" enabled="false" rows="10" cols="70" width="100%"/>
								</VBox>
								<!-- Product Selected Details -->
								<VBox id="productSelectedDetailsContainer">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S12"/>
									</layoutData>
									<!-- Product ID -->
									<Label text="{i18n>textProductIdLabel}" labelFor="productSelectedId"/>
									<Input id="productSelectedId" value="{products>ProductId}" enabled="false"/>
									<!-- Product Name -->
									<Label text="{i18n>textProductNameLabel}" labelFor="productSelectedName"/>
									<Input id="productSelectedName" value="{products>Name}" enabled="false"/>
									<!-- Product Price -->
									<Label text="{i18n>textProductPriceLabel}" labelFor="productSelectedPrice"/>
									<Input id="productSelectedPrice" value="{products>Price}" enabled="false"/>
								</VBox>
							</l:Grid>
						</Panel>
						
						<!-- Product Table Panel -->
						<Panel
							id="productTablePanel"
							headerText="{i18n>textProductTablePanel}"
							width="100%"
							height="auto"
							expandable="true"
							expanded="false">
							<Table
								id="productTable"
								headerText="{i18n>textProductTable}"
								items="{products>/}">
								<columns>
									<Column>
										<Text text="{i18n>textProductIdColumn}"/>
									</Column>
									<Column>
										<Text text="{i18n>textNameColumn}"/>
									</Column>
									<Column>
										<Text text="{i18n>textCategoryColumn}"/>
									</Column>
									<Column>
										<Text text="{i18n>textSupplierNameColumn}"/>
									</Column>
									<Column>
										<Text text="{i18n>textWeightMeasureColumn}"/>
									</Column>
									<Column>
										<Text text="{i18n>textQuantityColumn}"/>
									</Column>
									<Column>
										<Text text="{i18n>textPriceColumn}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<Text text="{products>ProductId}"/>
											<Text text="{products>Name}"/>
											<Text text="{products>Category}"/>
											<Text text="{products>SupplierName}"/>
											<Text text="{products>WeightMeasure}"/>
											<Text text="{products>Quantity}"/>
											<Text text="{products>Price}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</Panel>
						
						<!-- Composite Binding Panel -->
						<Panel
							id="formattingPanel"
							headerText="{i18n>textCompositeBindingPanel}"
							width="100%"
							height="auto"
							expandable="true"
							expanded="true">
							<VBox>
								<!-- Welcome -->
								<Label text="{i18n>textWelcomeLabel}" labelFor="welcome"/>
								<Input
									id="welcome"
									class="sapUiTinyMarginBottom"
									editable="false"
									value="{i18n>goodDayText} {formatting>/firstName} {formatting>/lastName}"
									width="60%"/>
									
								<!-- Balance -->
								<Label text="{i18n>textBalanceLabel}" labelFor="balance"/>
								<Input
									id="balance"
									class="sapUiTinyMarginBottom"
									editable="false"
									value="{
										parts: [
											'i18n>goodDayText',
											'formatting>/firstName',
											'i18n>yourBalanceText',
											'formatting>/balance'
										]
									}"
									width="60%"/>
								
								<!-- Formatted Balance -->
								<Label text="{i18n>textFormattedBalanceLabel}" labelFor="formattedBalance"/>
								<Input
									id="formattedBalance"
									class="sapUiTinyMarginBottom"
									editable="false"
									value="{
										parts: [
											{
												path: 'i18n>goodDayText'
											},
											{
												path: 'formatting>/firstName'
											},
											{
												path: 'i18n>yourBalanceText'
											},
											{
												path: 'formatting>/balance',
												type: 'sap.ui.model.type.Float',
												formatOptions: {
													minIntegerDigits: 3,
													minFractionDigits: 3,
													maxFractionDigits: 3
												}
											}
										]
									}"
									width="60%"/>
							</VBox>
							
							<VBox>
								<!-- Formated name -->
								<Label text="{i18n>textFormattedNameLabel}" labelFor="formattedName"/>
								<HBox
									class="sapUiTinyMarginBottom"
									alignItems="Center"
									renderType="Bare"
									width="60%">
									
									<!-- Gender icon -->
									<core:Icon
										class="sapUiSmallMarginEnd"
										color="{= ${formatting>/gender} === 'M' ? 'blue' : 'pink' }"
										size="2rem"
										src="sap-icon://employee"
										tooltip="{i18n>tooltipGenderIcon}"/>
										
									<Input
										id="formattedName"
										editable="false"
										value="{
											parts: [
												{path: 'formatting>/gender'},
												{path: 'formatting>/firstName'},
												{path: 'formatting>/lastName'}
											],
											formatter: '.formatName'
										}"
										width="90%"/>
								</HBox>
							</VBox>
						</Panel>
						
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>